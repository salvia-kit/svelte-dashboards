{
	"name": "dashboard-v4-svelte",
	"version": "1.0.0",
	"author": {
		"name": "Enoch Ndika"
	},
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/salvia-kit/dashboard-v4-svelte.git"
	},
	"keywords": [
		"ui",
		"components",
		"dashboard",
		"admin",
		"tailwindcss",
		"svelte",
		"svelte-kit",
		"layout"
	],
	"scripts": {
		"dev": "svelte-kit dev",
		"build": "svelte-kit build",
		"package": "svelte-kit package",
		"preview": "svelte-kit preview",
		"lint": "prettier --ignore-path .gitignore --check --plugin-search-dir=. . && eslint --ignore-path .gitignore .",
		"format": "prettier --ignore-path .gitignore --write --plugin-search-dir=. .",
		"prepare": "husky install"
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "^1.0.0-next.10",
		"@sveltejs/kit": "^1.0.0-next.230",
		"autoprefixer": "^10.4.2",
		"eslint": "^7.32.0",
		"eslint-config-prettier": "^8.4.0",
		"eslint-plugin-svelte3": "^3.4.1",
		"husky": "^7.0.4",
		"lint-staged": "^12.3.4",
		"postcss": "^8.4.7",
		"prettier": "^2.5.1",
		"prettier-plugin-svelte": "^2.6.0",
		"svelte": "^3.46.4",
		"tailwindcss": "^3.0.23"
	},
	"type": "module",
	"lint-staged": {
		"*.+(js|ts|svelte)": [
			"yarn run lint"
		],
		"*.+(js|json|ts|svelte)": [
			"yarn run format"
		]
	}
}
